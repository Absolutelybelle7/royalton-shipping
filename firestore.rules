rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users – only owner
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Shipments
    match /shipments/{shipmentId} {
      // Allow read for:
      // 1. Authenticated users (owners of shipment or admins)
      // 2. Unauthenticated users (for public tracking by tracking number)
      // Tracking numbers are unique public identifiers, so public read is safe
      allow read: if true;

      // Users can create new shipments for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Users can update their own shipments or admins can update any
      allow update: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      // Only admins can delete shipments
      allow delete: if isAdmin();
    }

    // Notifications
    match /notifications/{notificationId} {
      allow read, update: if isOwner(resource.data.userId);
      allow create: if isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // Quotes
    match /quotes/{quoteId} {
      allow create: if request.auth != null;
      allow read, update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // Tracking events – public read
    match /tracking_events/{eventId} {
      allow create: if isAdmin();
      allow read: if true;
    }

    // Saved addresses
    match /saved_addresses/{addressId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isOwner(resource.data.userId);
    }

    // Payments
    match /payments/{paymentId} {
      allow read: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create, update, delete: if isAdmin();
    }

    // Locations – public read-only
    match /locations/{locationId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Catch-all deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}